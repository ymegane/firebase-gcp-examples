{
  "name": "nextjs-ssr",
  "version": "1.0.0",
  "main": "dist/server/index.js",
  "license": "MIT",
  "scripts": {
    "build:client": "next build src/client",
    "build:server": "babel src/server --out-dir dist/server --source-maps",
    "build": "yarn build:client && yarn build:server",
    "watch:client": "next src/client",
    "watch:server": "babel src/server --out-dir dist/server --source-maps --watch",
    "watch": "yarn watch:client & yarn watch:server",
    "serve": "cross-env NODE_ENV=production yarn firebase serve --only functions:nextjs,hosting",
    "predeploy": "rimraf dist/ && yarn build",
    "deploy": "yarn firebase deploy --only functions:nextjs,hosting"
  },
  "dependencies": {
    "firebase-admin": "^7.0.0",
    "firebase-functions": "^2.2.0",
    "next": "^8.0.1",
    "react": "^16.8.1",
    "react-dom": "^16.8.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "cross-env": "^5.2.0",
    "firebase-tools": "^6.3.1",
    "rimraf": "^2.6.3"
  },
  "engines": {
    "node": "8"
  }
}
